<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls1="clr-namespace:MauiSample.Common.Controls;assembly=MauiSample.Common"
             xmlns:controls="clr-namespace:HoldDownButtonGroup.Controls;assembly=HoldDownButtonGroup"
             BackgroundColor="{StaticResource PhoneBackgroundBrush}"
             x:Class="HoldDownButtonGroup.MainPage">


    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <!--标题区域-->

            <Grid x:Name="MainLayout">

                <controls:HoldDownButton></controls:HoldDownButton>




            </Grid>
            <StackLayout Grid.Row="1" Orientation="Vertical">
                <Button Text="CircleSliderSamplePage"
                        x:Name="CircleSliderSamplePage"
                       Clicked="CircleSliderSamplePage_Clicked_1"></Button>
                <Button Text="CircleProgressBarSamplePage"
                        x:Name="CircleProgressBarSamplePage"
                        Clicked="CircleProgressBarSamplePage_Clicked_1"></Button>
            </StackLayout>
        </Grid>





    </ContentPage.Content>

</ContentPage>
