<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="MainView"
             x:Class="HoldDownButtonGroup.Controls.Bubble">


    <Ellipse Stroke="Red"
             
               Opacity="1"
        x:Name="MainBox"
        HeightRequest="{Binding Source={x:Reference MainView}, Path=Height}"
        WidthRequest="{Binding Source={x:Reference MainView}, Path=Width}"
         StrokeThickness="2"
  
         HorizontalOptions="Start" />
</ContentView>
