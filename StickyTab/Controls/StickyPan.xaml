<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             SizeChanged="ContentView_SizeChanged"
             Background="white"
            
             x:Class="StickyTab.Controls.StickyPan">
    <Grid Margin="-100,0,-100,0">
    <Path Stroke="red">
        <Path.Data>
            <PathGeometry>
                <PathFigure x:Name="figure1"
                            >
                    <PathFigure.Segments>
                        <PathSegmentCollection>
                            <BezierSegment x:Name="arc1" />
                            <BezierSegment x:Name="arc2" />
                            <BezierSegment x:Name="arc3" />
                            <BezierSegment x:Name="arc4" />
                        </PathSegmentCollection>
                    </PathFigure.Segments>
                </PathFigure>
                <PathFigure x:Name="figure2" IsClosed="True">
                    <PathFigure.Segments>
                        <PolyLineSegment x:Name="poly1" />
                    </PathFigure.Segments>
                </PathFigure>
            </PathGeometry>
        </Path.Data>
        </Path>
    </Grid>
</ContentView>
